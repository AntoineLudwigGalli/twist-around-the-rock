{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
{#    todo ajouter prix et images latérales#}
    
    
    {# Lien pour revenir à la liste des produits #}
    <div class="row">
        <div class="text-center col-8 offset-2 my-3 col-md-3 text-md-start ms-md-3 btn btn-danger">
            <a href="{{ path('products_') }}" class="link-style back">Retour à la liste des produits</a>
        </div>
    </div>
    
    {# Affichage du produit #}
    <div class="row">
        
        <div class="col-12 col-md-10 mx-auto">
            
            <article class="card my-2">
                
                <div class="card-body">
                    
                    <div class="row">
                        <h1 class="col-12 text-center my-5">{{ product.name }}</h1>
                    </div>
                    
                    {% if product.coverImage != null %}
                        <img src="{{ asset('images/product_images/' ~ product.coverImage) }}" alt="Image de couverture de lu produit {{ product.name }}" class="article-image col-10 offset-1 mb-4">
                    {% endif %}
                    
                    <div class="mb-2">
                        {{ product.content|purify }}
                    </div>
                    
                    <footer class="blockquote-footer mt-4">
                        Créé le <span class="quote-text">{{ product.creationDate|date('d/m/Y') }}</span>.
                    </footer>
                    
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="mt-3">
                            <a onclick="return confirm('Êtes-vous sur de vouloir modifier ce produit ?')" href="{{ path('products_edit', {'id': product.id}) }}"
                                    class="text-decoration-none text-warning me-3"> <i class="fa-solid  fa-pen-to-square me-2"></i> Modifier </a>
                            
                            <a onclick="return confirm('Êtes-vous sur de vouloir supprimer ce produit ?')"
                                    href="{{ path('products_delete', {'id': product.id, 'csrf_token' : csrf_token('product_delete_' ~ product.id) }) }}"
                                    class="text-decoration-none text-danger"> <i class="fa-solid fa-trash-can me-2"></i> Supprimer </a>
                        </div>
                    
                    {% endif %}
                
                </div>
            
            </article>
        
        </div>
    
    </div>


{% endblock %}


