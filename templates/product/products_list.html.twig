{#                <div class="row">#}
{#                    <div class="col-12 my-3 text-center">#}
{#                        <div class="d-inline-block">#}
{#                            {{ knp_pagination_render(products) }}#}
{#                        </div>#}
{#                    </div>#}
{#                </div>#}
{#            {% endif %}#}

{% endblock %}


