{% extends 'base.html.twig' %}

{% block title %}Modification d'une publication{% endblock %}

{% block body %}
    
    <h1 class="col-12 text-center my-5 text-light">Modifier la publication</h1>
    
    <div class="row">
        <p class="text-center col-12 ">
            
            <a href="{{ path('blog_publication_view', {'id': form.vars.value.id, 'slug': form.vars.value.slug}) }}"
                    class="btn btn-danger">Revenir sur l'article</a>
        </p>
    </div>
    <div class="row">
        <div class="col-12 col-md-8 mx-auto text-light">
            
            {# Affichage du formulaire de cr√©ation d'article #}
            {{ form(form) }}
            <a href="{{ path('blog_publication_view', {'id': form.vars.value.id, 'slug': form.vars.value.slug}) }}"
                    class="btn btn-danger col-12">Retour</a>
        </div>
    </div>

{% endblock %}


