    {% for product in products %}
    
    {#                 Un produit #}
    <div class="col-12 col-md-5 col-lg-3 js-filter-content product" id="product-{{ product.id }}">
        <div class="product-card mb-3">
            <a href="{{ path('products_view', {'id': product.id, 'slug': product.slug
            }) }}" class="link-style">
                {% if product.coverImage != null %}
                    <img src="{{ asset('images/product_images/' ~ product.coverImage) }}" alt="Image de couverture du produit {{ product.name }}" class="article-image-thumbnail img-fluid img-thumbnail">
                {% endif %}
                <h4>{{ product.name }}</h4>
            </a>
        </div>
        
        
        {% if is_granted('ROLE_ADMIN') %}
            <div class="mt-3">
                <a onclick="return confirm('Êtes-vous sur de vouloir modifier ce produit ?')" href="{{ path('products_edit', {'id': product.id}) }}" class="text-decoration-none text-warning me-3"> <i class="fa-solid  fa-pen-to-square me-2"></i> Modifier </a>
                
                <a onclick="return confirm('Êtes-vous sur de vouloir supprimer ce produit ?')" href="{{ path('products_delete', {'id': product.id, 'csrf_token' : csrf_token('product_delete_' ~ product.id) }) }}" class="text-decoration-none text-danger"> <i
                            class="fa-solid fa-trash-can me-2"></i> Supprimer </a>
            </div>
        
        {% endif %}
    
    </div>

{% else %}
    
    <div class="row">
        <p class="col-12 text-center alert alert-warning">Aucun produit à afficher</p>
    </div>

{% endfor %}

</div>

